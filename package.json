{
  "name": "wauac-adapter",
  "version": "1.0.0",
  "description": "WAUAC - WhatsApp Universal Adapter for Chatwoot",
  "main": "dist/app.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "security:check": "npm audit && npm audit signatures",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "tunnel": "ngrok http 3333"
  },
  "keywords": [
    "whatsapp",
    "chatwoot",
    "adapter",
    "webhook",
    "zapi"
  ],
  "author": "WAUAC Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "bull": "4.11.3",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "form-data": "^4.0.4",
    "helmet": "7.0.0",
    "ioredis": "5.3.2",
    "joi": "17.10.0",
    "winston": "3.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "4.17.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/form-data": "^2.2.1",
    "@types/helmet": "^0.0.48",
    "@types/jest": "29.5.4",
    "@types/node": "20.5.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "6.4.0",
    "@typescript-eslint/parser": "6.4.0",
    "eslint": "8.47.0",
    "jest": "29.6.2",
    "ngrok": "^4.3.3",
    "ts-jest": "29.1.1",
    "tsx": "^4.20.5",
    "typescript": "5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
